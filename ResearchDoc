    function populateDefectImages() {
        for (const defectId in defectImageGroupings) {
            const imageKeys = defectImageGroupings[defectId];
            const defectCard = document.getElementById(defectId);
            if (defectCard && imageKeys && imageKeys.length > 0) {
                let imageGalleryDiv = defectCard.querySelector('.image-gallery');
                if (imageGalleryDiv) {
                    imageGalleryDiv.innerHTML = ''; 
                    imageKeys.forEach((imageKey, index) => {
                        const gDriveViewUrl = imageData[imageKey];
                        if (gDriveViewUrl) {
                            const linkElement = document.createElement('a');
                            linkElement.href = gDriveViewUrl;
                            linkElement.target = '_blank';
                            linkElement.className = 'text-teal-600 hover:text-teal-800 hover:underline text-xs block py-1';
                            
                            const pagePart = imageKey.split('BBox')[0];
                            linkElement.textContent = `View Image ${index + 1} (${pagePart})`;
                            
                            imageGalleryDiv.appendChild(linkElement);
                        }
                    });
                }
            }
        }
    }

    function setActiveSection(targetId) {
        contentSections.forEach(section => {
            section.classList.remove('active');
            if (section.id === targetId) {
                section.classList.add('active');
            }
        });
        navLinks.forEach(link => {
            link.classList.remove('active');
            if (link.dataset.target === targetId) {
                link.classList.add('active');
            }
        });
        document.querySelector('main').scrollTop = 0;
    }

    navLinks.forEach(link => {
        link.addEventListener('click', () => {
            setActiveSection(link.dataset.target);
        });
    });

    navSubmenuParents.forEach(parent => {
        parent.addEventListener('click', (e) => {
            if (e.target === parent || e.target.classList.contains('arrow') || parent.contains(e.target.querySelector('.arrow'))) {
                 const submenu = parent.nextElementSibling;
                 const arrow = parent.querySelector('.arrow');
                 if (submenu.classList.contains('hidden')) {
                    submenu.classList.remove('hidden');
                    arrow.classList.add('rotate-90');
                 } else {
                    submenu.classList.add('hidden');
                    arrow.classList.remove('rotate-90');
                 }
            }
        });
    });
    
    setActiveSection('overview');
    populateDefectImages();

    const repairCostsCtx = document.getElementById('repairCostsChart')?.getContext('2d');
    if (repairCostsCtx) {
        const repairData = {
            labels: ['Roofing (Priority)', 'External Render (1 elev.)', 'Electrical Rewire', 'Outbuilding (Assess & Demo)', 'Damp (Survey & 1 Wall)', 'Windows (3-4 units)', 'Safety Items'],
            datasets: [{
                label: 'Estimated Mid-Point Repair Cost (¬£)',
                data: [4250, 4500, 6000, 1850, 1100, 525, 715],
                backgroundColor: ['rgba(217, 119, 6, 0.7)','rgba(239, 68, 68, 0.7)','rgba(245, 158, 11, 0.7)','rgba(101, 163, 13, 0.7)','rgba(59, 130, 246, 0.7)','rgba(139, 92, 246, 0.7)','rgba(20, 184, 166, 0.7)'],
                borderColor: ['rgba(217, 119, 6, 1)','rgba(239, 68, 68, 1)','rgba(245, 158, 11, 1)','rgba(101, 163, 13, 1)','rgba(59, 130, 246, 1)','rgba(139, 92, 246, 1)','rgba(20, 184, 166, 1)'],
                borderWidth: 1
            }]
        };
        new Chart(repairCostsCtx, {
            type: 'bar', data: repairData, options: { responsive: true, maintainAspectRatio: false,
                scales: { y: { beginAtZero: true, title: { display: true, text: 'Cost (¬£)' } },
                          x: { ticks: { autoSkip: false, maxRotation: 45, minRotation: 30,
                             callback: function(value) { const label = this.getLabelForValue(value); return label.length > 16 ? label.substring(0, 16) + '...' : label; } } } },
                plugins: { legend: { display: false }, title: { display: true, text: 'Key Repair Cost Areas (Gemini Estimates - Mid-Points)' },
                    tooltip: { callbacks: { label: function(context) { let label = context.dataset.label || ''; if (label) { label += ': '; }
                                if (context.parsed.y !== null) { label += new Intl.NumberFormat('en-GB', { style: 'currency', currency: 'GBP' }).format(context.parsed.y); }
                                const fullXLabel = repairData.labels[context.dataIndex]; return [label, `Category: ${fullXLabel} (Gemini Estimate)`]; } } } } }
        });
    }

    const surveyorCostsCtx = document.getElementById('surveyorCostsChart')?.getContext('2d');
    if (surveyorCostsCtx) {
