                scales: { y: { beginAtZero: true, title: { display: true, text: 'Cost (¬£)' } },
                          x: { ticks: { autoSkip: false, maxRotation: 45, minRotation: 30,
                             callback: function(value) { const label = this.getLabelForValue(value); return label.length > 20 ? label.substring(0, 20) + '...' : label; } } } },
                plugins: { legend: { display: false }, title: { display: true, text: 'Key Upgrade Costs (Gemini Estimates - Mid-Points)' },
                    tooltip: { callbacks: { label: function(context) { let label = context.dataset.label || ''; if (label) { label += ': '; }
                                if (context.parsed.y !== null) { label += new Intl.NumberFormat('en-GB', { style: 'currency', currency: 'GBP' }).format(context.parsed.y); }
                                const fullXLabel = upgradeData.labels[context.dataIndex]; return [label, `Upgrade: ${fullXLabel} (Gemini Estimate)`]; } } } } }
        });
    }

